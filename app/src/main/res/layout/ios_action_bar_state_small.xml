<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="130dp"
    android:layout_height="130dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center"
    >

    <ImageView
        android:layout_width="@dimen/ios_button_size"
        android:layout_height="@dimen/ios_button_size"
        android:id="@+id/action_image_view1"
        android:layout_gravity="center"
        android:background="@drawable/bg_rounded"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        android:src="@drawable/action_1"
        style="@style/IOSButton1"
        />

    <ImageView
        android:layout_width="@dimen/ios_button_size"
        android:layout_height="@dimen/ios_button_size"
        android:id="@+id/action_image_view2"
        android:layout_gravity="center"
        android:background="@drawable/bg_rounded"
        app:layout_constraintStart_toEndOf="@id/action_image_view1"
        app:layout_constraintTop_toTopOf="@id/action_image_view1"
        android:layout_marginStart="10dp"
        android:src="@drawable/action_1"
        style="@style/IOSButton1"
        />

    <ImageView
        android:layout_width="@dimen/ios_button_size"
        android:layout_height="@dimen/ios_button_size"
        android:id="@+id/action_image_view3"
        android:layout_gravity="center"
        android:background="@drawable/bg_rounded"
        app:layout_constraintStart_toStartOf="@id/action_image_view1"
        app:layout_constraintTop_toBottomOf="@id/action_image_view1"
        android:layout_marginTop="10dp"
        android:src="@drawable/action_1"
        style="@style/IOSButton1"
        />

    <ImageView
        android:layout_width="@dimen/ios_button_size"
        android:layout_height="@dimen/ios_button_size"
        android:id="@+id/action_image_view4"
        android:layout_gravity="center"
        android:background="@drawable/bg_rounded"
        app:layout_constraintStart_toStartOf="@id/action_image_view2"
        app:layout_constraintTop_toTopOf="@id/action_image_view3"
        android:src="@drawable/action_1"
        style="@style/IOSButton1"
        />

    <ImageView
        android:layout_width="@dimen/ios_button_size"
        android:layout_height="@dimen/ios_button_size"
        android:id="@+id/action_image_view5"
        android:layout_gravity="center"
        android:background="@drawable/bg_rounded"
        app:layout_constraintTop_toBottomOf="@id/action_image_view3"
        app:layout_constraintStart_toStartOf="@id/action_image_view3"
        android:layout_marginTop="10dp"
        android:src="@drawable/action_1"
        style="@style/IOSButton1"

        android:visibility="invisible"
        />

    <ImageView
        android:layout_width="@dimen/ios_button_size"
        android:layout_height="@dimen/ios_button_size"
        android:id="@+id/action_image_view6"
        android:layout_gravity="center"
        android:background="@drawable/bg_rounded"
        app:layout_constraintTop_toTopOf="@id/action_image_view5"
        app:layout_constraintStart_toStartOf="@id/action_image_view4"
        android:src="@drawable/action_1"
        style="@style/IOSButton1"

        android:visibility="invisible"
        />

    <!-- Text data -->
    <LinearLayout
        android:visibility="invisible"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/action_image_view1"
        app:layout_constraintStart_toStartOf="@id/action_image_view1"
        app:layout_constraintEnd_toEndOf="@id/action_image_view1">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/action_1_overview" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/action_1_status"
            android:gravity="center_horizontal"/>
    </LinearLayout>

    <LinearLayout
        android:visibility="invisible"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/action_image_view2"
        app:layout_constraintStart_toStartOf="@id/action_image_view2"
        app:layout_constraintEnd_toEndOf="@id/action_image_view2">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/action_1_overview" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/action_1_status"
            android:gravity="center_horizontal"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>